version: '3.8'

services:
  {{ app_name }}:
    image: "{{ docker_image_name }}"
    ports:
      - "127.0.0.1:{{ app_port }}:{{ app_port }}"

  nginx:
    image: nginx:latest
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/conf.d/default.conf
      - ./certs:/etc/ssl/certs
    depends_on:
      - {{ app_name }}
